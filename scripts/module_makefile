			$(MAKE) EKS_CLUSTER_NAME=$$p \
				GHA_ID=95403 \
				GHA_INST_ID=13954108 \
				GHA_PRIVATE_KEY_VAR=GHA_PRIVATE_KEY \
				EKS_ENVIRONMENT=vanguard \
				PROJECTTAG=gi-ci-vanguard \
				CLUSTER_CONFIG_FILE=inventory/eks/vanguard_cluster_config \
				RUNNERSCOPE=pytorch-org \
				MINRUNNERS=0 \
				MAXRUNNERS=0 \
				clean-k8s-rds-state setup-karpenter-autoscaler k8s-runner-scaler delete-stale-rds || exit 1 ; \
		done

