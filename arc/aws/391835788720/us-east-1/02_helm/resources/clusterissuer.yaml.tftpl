apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: ${letsencrypt_issuer}
spec:
  acme:
    email: ${cert_manager_email}
    privateKeySecretRef:
      name: ${letsencrypt_issuer}
    server: https://acme-v02.api.letsencrypt.org/directory
    solvers:
    - http01:
        ingress:
          class: nginx
          ingressTemplate:
            metadata:
              annotations:
                nginx.ingress.kubernetes.io/ssl-passthrough: "false"
